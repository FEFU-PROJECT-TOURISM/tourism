server {
    listen 80;
    server_name <IP>;

    # === Известные прокси ===

    location /api/ {
        proxy_pass http://127.0.0.1:8000/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        add_header Access-Control-Allow-Origin *;
        add_header Access-Control-Allow-Methods "GET, POST, OPTIONS";
        add_header Access-Control-Allow-Headers "Origin, Content-Type, Accept, Authorization";
    }

      location /grafana/ {
    proxy_set_header Host $host;
    #rewrite  ^/grafana/(.*)  /$1 break;
    proxy_pass http://localhost:3010;
  }

  location /grafana/api/live/ {
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
#    proxy_set_header Connection $connection_upgrade;
    proxy_set_header Host $host;
    #rewrite  ^/grafana/(.*)  /$1 break;
    proxy_pass http://localhost:3010;
  }



    location /adminer/ {
        proxy_pass http://localhost:8081/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Блокируем только "опасные" или нежелательные префиксы
    location ~ ^/(admin|backup|config|git|node_modules|.*\.env) {
        return 404;
    }

    # === Основной SPA — только корень и "неизвестные файлы", но не префиксы ===
    # Это покрывает: /, /tours, /profile — и всё, что не попало под /api и т.д.
    location / {
        proxy_pass http://localhost:5173;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_set_header Sec-WebSocket-Version 13;
        proxy_set_header Sec-WebSocket-Key $http_sec_websocket_key;
        proxy_set_header Sec-WebSocket-Extensions $http_sec_websocket_extensions;
        proxy_set_header Sec-WebSocket-Protocol $http_sec_websocket_protocol;
    }

    access_log /var/log/nginx/tourism.access.log;
    error_log  /var/log/nginx/tourism.error.log;
}
